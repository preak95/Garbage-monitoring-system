<head>
  <meta charset="UTF-8">
    <script language="javascript" type="text/javascript" src="p5.js"></script>
    <script language="javascript" type="text/javascript" src="sketch.js"></script>
    <script>
        var level = <%- lev %>;
        if(level > 8)
            level = 8;
        level = 8 - level; 
        console.log(level);
        var h = ((1-(level/8))*180);
        
        var g = (1-(level/8)) * 255;
        var r = ((level/8)) * 255;
        function draw(){
            
            fill(r, g, 50);
            rect(200, 200, 120, 180);
            fill(255,255,255)
            rect(200, 200, 120, h);
            fill(255);
            textStyle(BOLD);
            textSize(15);
            text(Math.round(((level/7))*100) + " %", 250, 200 + 90 + (h/2) );
        }
    </script>
